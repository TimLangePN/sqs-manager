<Window x:Class="sqs_handler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sqs_handler"
        mc:Ignorable="d"
        Title="SQS Handler" Height="250" Width="400" ResizeMode="NoResize" SizeToContent="WidthAndHeight" Background="#FFDDDDDD" Icon="/icon.png">
    <Grid Margin="0,0,0,0" Background="#FFC8C8C8">

        <TextBox x:Name="queuename" Margin="108,55,0,0" Width="175" TextWrapping="NoWrap" VerticalAlignment="Top" ScrollViewer.CanContentScroll="False" HorizontalAlignment="Left" Height="23"/>

        <Label x:Name="regionlabel" Content="Region" HorizontalAlignment="Left" Margin="15,91,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="accountlabel" Content="Account" HorizontalAlignment="Left" Margin="15,14,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label x:Name="queuenamelabel" Content="Queue name" Margin="10,51,306,157" FontWeight="Bold"/>
        <ComboBox x:Name="region" Width="175" Margin="108,93,0,119" HorizontalAlignment="Left">
            <ComboBoxItem Content="eu-central-1"/>
            <ComboBoxItem Content="eu-west-1"/>
            <ComboBoxItem Content="eu-west-2"/>
            <ComboBoxItem Content="eu-south-1"/>
            <ComboBoxItem Content="eu-west-3"/>
            <ComboBoxItem Content="eu-north-1"/>
        </ComboBox>
        <ComboBox x:Name="env" Margin="108,15,0,195" HorizontalAlignment="Left" Width="175">
            <ComboBoxItem Content="Phonixx"/>
            <ComboBoxItem Content="Bloxx"/>
        </ComboBox>
        <Button x:Name="Start" Content="Start" Margin="74,152,232,42" Click="Start_Click" FontWeight="Bold"/>

        <TextBlock x:Name="statuslabel" HorizontalAlignment="Right" Margin="0,0,77,22" TextWrapping="Wrap" VerticalAlignment="Bottom" Height="67" Width="135" Opacity="0.80" FontWeight="Bold"/>

    </Grid>
</Window>
